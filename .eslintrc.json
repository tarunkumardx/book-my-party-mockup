{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended",
		"plugin:react/recommended"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": [
		"@typescript-eslint",
		"react"
	],
	"rules": {
		"no-unused-vars": "off",
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"quotes": [
			"error",
			"single",
			{
				"avoidEscape": true
			}
		],
		"jsx-quotes": [
			"error",
			"prefer-double"
		],
		"no-multiple-empty-lines": [
			"error",
			{
				"max": 1,
				"maxEOF": 1,
				"maxBOF": 0
			}
		],
		"comma-dangle": [
			"error",
			"never"
		],
		"padded-blocks": [
			"error",
			"never"
		],
		"space-in-parens": [
			"error",
			"never"
		],
		"no-multi-spaces": "error",
		"no-trailing-spaces": "error"
	}
}